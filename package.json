    "@types/react-test-renderer": "^16.9.3",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
